pipeline{
    agent any
    stages {
        stage("build"){
            steps{
                echo 'building the app'
                echo 'application built'
                echo 'done'

            }
        }

        stage("test"){
            steps{
                 echo 'testing the app'

            }
        }

        stage("deploy"){
            steps{
                 echo 'deploying the app'

            }
        }

    }
}
